#!/bin/bash
yum update -y

# Install Httpd Services
yum install -y httpd

# Start and enable Apache to run on boot
systemctl start httpd
systemctl enable httpd

# Create a Directory for /aws path
mkdir /var/www/html/aws

# Create a simple HTML file in the /var/www/html/aws/ Directory
echo "This is The AWS Page Served At /aws" > /var/www/html/aws/index.html